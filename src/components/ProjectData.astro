---
import { IoLogoGithub } from "react-icons/io";
import { FaReact, FaCss3Alt, FaPython } from "react-icons/fa";
import { IoLogoFirebase } from "react-icons/io5";
import { RiNextjsFill } from "react-icons/ri";
import { SiFramer, SiGraphql } from "react-icons/si";


const { tools, title, git, descrip } = Astro.props;

---

<div class="cardData">
    <div class="titleLink">
        <h4>{title}</h4>
        <a href={git}><IoLogoGithub/></a>
    </div>
    <div>
        <p>
            {descrip}
        </p>
    </div>
    <div class="tools">
        {
            tools.map((tool, index) => {
                switch (tool) {
                    case "React":
                        return <div><FaReact/></div>
                    case "Next":
                        return <div><RiNextjsFill/></div>
                    case "Framer":
                        return <div><SiFramer fontSize={25}/></div>
                    case "CSS":
                        return <div><FaCss3Alt/></div>
                    case "Firebase":
                        return <div><IoLogoFirebase/></div>
                    case "Python":
                        return <div><FaPython /></div>
                    case "GraphQL":
                        return <div><SiGraphql /></div>
                    default:
                        return <div></div>
                }
            })
            
        }
        
    </div>
</div>

<style>
    .cardData{
        position: absolute;
        bottom: 0;
        background-color: #020202;
        color: rgb(255, 255, 255);
        height: 45%;
        width: 90%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border: 1px solid #020202;
        border-top: 1px solid rgba(255, 255, 255, 0.678);
        gap: 10px;
    }
    .titleLink{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
    }
    .titleLink a{
        font-size: 1.5rem;
        color: white;
    }
    h4{
        margin: 0px;
        font-size: 1.5rem;
        font-family: 'DM Sans Regular', sans-serif;
    }
    p{
        margin: 0px;
        font-size: 0.8rem;
        font-family: 'DM Sans Regular', sans-serif;
        opacity: 0.7;
    }
    .tools{
        display: flex;
        gap: 17px;
        font-size: 28px;
        margin-top: 5px;
    }
    .tools div{
        
    }

</style>