---

import Carrousel from "./Carrousel/Carrousel";
---

<section id="Experience">
    <div class="contenedorExperience">
        <div class="contenedorSubtitulo">
            <h2  >
                Experience
            </h2>
            <div class="line">

            </div>
        </div>
        <div class="carrouselSection">
            
                <Carrousel client:load/>
            
        </div>
    </div>
</section>

<style>
    section{
        display: flex;
        justify-content: center;
        padding-top: 120px;
        background-color: #000000fd;
        height: 70vh;
    }
    .contenedorExperience{
        height: fit-content;
        width: 80%;
    }
    .contenedorSubtitulo{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-right: 40px;
        padding-bottom: 20px;
    }
    h2{
        font-family: 'DM Sans Regular', sans-serif;
        color: #e7dece;
        font-size: 3rem;
        margin-left: 20px;
        margin: 0px;
        padding-left: 47px;
        margin-right: 20px;
    }
    .line{
        
        margin-top: 12px;
        width: 100%;
        height: 2px;
        background-color: rgba(255, 255, 255, 0.445);
    }
    .carrouselSection{
        height: 450px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>